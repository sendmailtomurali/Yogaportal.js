doctype html
html
  head
    title Users
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 20px;
      }
      h1 {
        color: #333;
        text-align: center;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
      }
      th, td {
        border: 1px solid #ccc;
        padding: 10px;
        text-align: left;
      }
      th {
        background-color: #333;
        color: white;
      }
      tr:nth-child(even) {
        background-color: #f2f2f2;
      }
      tr:hover {
        background-color: #e0e0e0;
      }
  body
    h1 User List
    table
      tr
        th ID
        th Name
        th Location
        th Member Since
      each user in users
        tr
          td= user.id
          td= user.name
          td= user.location
          td= user.membersince

