doctype html
html
  head
    title Welcome to Attendance System
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: 'Arial', sans-serif;
        background-color: #F7F4F1;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .container {
        width: 90%;
        max-width: 1000px;
        height: auto;
        background-color: #ECE7E1;
        border: 1px solid #D5C6B8;
        border-radius: 8px;
        display: flex;
        flex-direction: column; /* Changed to column */
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.05);
        overflow: hidden;
      }
      .left-section {
        width: 100%; /* Changed to 100% */
        height: 250px; /* Added height for better display on small screens */
        background: url('/images/landing page.jpg') no-repeat center center;
        background-size: cover;
      }
      .right-section {
        width: 100%; /* Changed to 100% */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 20px;
      }
      h1 {
        color: #4A6572;
        margin-bottom: 20px;
      }
      p {
        color: #7A8C99;
        font-size: 18px;
        margin-bottom: 30px;
      }
      .button-container {
        display: flex;
        flex-direction: column;
        gap: 15px;
      }
      .nav-button {
        background-color: #4A6572;
        color: white;
        border: none;
        cursor: pointer;
        padding: 12px 20px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        text-align: center;
        width: 200px;
        transition: 0.3s ease;
      }
      .nav-button:hover {
        background-color: #7A8C99;
        transform: scale(1.05);
      }
      @media (min-width: 769px) { /* Updated media query for larger screens */
        .container {
          flex-direction: row;
          height: 80vh;
        }
        .left-section {
          width: 50%;
          height: auto;
        }
        .right-section {
          width: 50%;
        }
      }
  body
    .container
      .left-section
      .right-section
        h1 Welcome to the Attendance System
        p Please choose an option below:

        .button-container
          a(href="/addAttendance")
            button.nav-button Add Attendance
          a(href="/Attendance")
            button.nav-button View Attendance




