doctype html
html
  head
    title Attendance
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 20px;
      }
      h1 {
        color: #333;
        text-align: center;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
      }
      th, td {
        border: 1px solid #ccc;
        padding: 10px;
        text-align: left;
      }
      th {
        background-color: #333;
        color: white;
      }
      tr:nth-child(even) {
        background-color: #f2f2f2;
      }
      tr:hover {
        background-color: #e0e0e0;
      }
  body
    h1 Attendance Details
    table
      tr
        th ID
        th Date
        th Time 
        th Name 
        th Activity
      each record in attendance
        tr
          td= record.id
          td= record.date
          td= record.time
          td= record.name
          td= record.activity

