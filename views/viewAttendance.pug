doctype html
html
  head
    title Attendance
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #FFF3E0;
        margin: 0;
        padding: 20px;
        text-align: center;
      }
      h1 {
        color: #E65100;
      }
      table {
        width: auto;
        border-collapse: collapse;
        margin: 10px auto;
        background-color: #FFCC80;
        display: inline-table;
      }
      th, td {
        border: 1px solid #E65100;
        padding: 5px;
        text-align: left;
        font-size: 14px;
        white-space: nowrap;
      }
      th {
        background-color: #E65100;
        color: white;
      }
      tr:nth-child(even) {
        background-color: #FFE0B2;
      }
      tr:hover {
        background-color: #FFB74D;
      }
    script.
      function formatTimeToAMPM() {
        document.querySelectorAll(".time-cell").forEach(cell => {
          let time = cell.innerText.trim();
          if (time) {
            let [hours, minutes] = time.split(":");
            hours = parseInt(hours, 10);
            let ampm = hours >= 12 ? "PM" : "AM";
            hours = hours % 12 || 12; // Convert to 12-hour format
            cell.innerText = `${hours}:${minutes} ${ampm}`;
          }
        });
      }
      document.addEventListener("DOMContentLoaded", formatTimeToAMPM);
  body
    h1 Attendance Details
    table
      tr
        th ID
        th Date
        th Time 
        th Name 
        th Activity
      each record in attendance
        tr
          td= record.id
          td= record.date
          td.time-cell= record.time
          td= record.name
          td= record.activity
