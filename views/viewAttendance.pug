doctype html
html
  head
    title Attendance
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: 'Arial', sans-serif;
        background-color: #F7F4F1;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }
      h1 {
        color: #4A6572;
        text-align: center;
        margin-bottom: 20px;
      }
      .table-container {
        width: 80%;
        max-width: 900px;
        height: 70vh;
        background-color: #ECE7E1;
        border: 1px solid #D5C6B8;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.05);
        overflow-y: auto;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        background-color: #FAF3EC;
      }
      th, td {
        border: 1px solid #D5C6B8;
        padding: 10px;
        text-align: left;
        font-size: 14px;
        white-space: nowrap;
      }
      th {
        background-color: #4A6572;
        color: white;
      }
      tr:nth-child(even) {
        background-color: #ECE7E1;
      }
      tr:hover {
        background-color: #D5C6B8;
      }
      .back-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
      }
      .back-button {
        background-color: #4A6572;
        color: white;
        border: none;
        cursor: pointer;
        padding: 8px 15px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 5px;
        text-align: center;
        width: 120px;
      }
      .back-button:hover {
        background-color: #7A8C99;
      }
    script.
      function formatTimeToAMPM() {
        document.querySelectorAll(".time-cell").forEach(cell => {
          let time = cell.innerText.trim();
          if (time) {
            let [hours, minutes] = time.split(":");
            hours = parseInt(hours, 10);
            let ampm = hours >= 12 ? "PM" : "AM";
            hours = hours % 12 || 12; // Convert to 12-hour format
            cell.innerText = `${hours}:${minutes} ${ampm}`;
          }
        });
      }
      document.addEventListener("DOMContentLoaded", formatTimeToAMPM);
  body
    h1 Attendance Details
    .table-container
      table
        tr
          th ID
          th Date
          th Time 
          th Name 
          th Activity
        each record in attendance
          tr
            td= record.id
            td= record.date
            td.time-cell= record.time
            td= record.name
            td= record.activity

    .back-container
      button.back-button(onclick="window.history.back()") Back

